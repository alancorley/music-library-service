@model SongLibrary.API.Models.SongForCreationDto

@{
    ViewData["Title"] = "Create";
}

<h1>Add New Song</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <input asp-for="Genre" class="form-control" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Upload Song (.mp3 format only)</label>
                <input asp-for="Filename" class="form-control"  type="file" name="Filename"/>
                <span asp-validation-for="Filename" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" name="artistId" value="@ViewBag.ArtistId" />
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Song" asp-action="List" asp-route-id="@ViewBag.ArtistId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
